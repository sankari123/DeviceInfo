<widget xmlns="http://www.w3.org/ns/widgets" xmlns:gap="http://phonegap.com/ns/1.0" id="com.phonegap.helloworld" version="1.0.0">
  <name>DeviceInfo</name>
  <description>DeviceInfo</description>
  <author href="http://phonegap.com" email="sivasankari.appcorridor@gmail.com">Sivasankari</author>
  <content src="index.html"/>
  <feature name="Notification">
        <param name="android-package" value="org.apache.cordova.dialogs.Notification" />
  </feature>
  <preference name="phonegap-version" value="cli-9.0.0" />
  <preference name="AndroidPersistentFileLocation" value="Compatibility" />
  <preference name="orientation" value="portrait"/>
  <preference name="target-device" value="universal"/>
  <preference name="fullscreen" value="false"/>
  <preference name="webviewbounce" value="true"/>
  <preference name="prerendered-icon" value="true"/>
  <preference name="stay-in-webview" value="false"/>
  <preference name="ios-statusbarstyle" value="black-opaque"/>
  <preference name="detect-data-types" value="true"/>
  <preference name="exit-on-suspend" value="false"/>
  <preference name="show-splash-screen-spinner" value="true"/>
  <preference name="auto-hide-splash-screen" value="true"/>
  <preference name="disable-cursor" value="false"/>
  <preference name="android-build-tool" value="gradle" /> 
  
  <preference name="android-installLocation" value="auto"/>
  <preference name="iosPersistentFileLocation" value="Library" />
  <preference name="InAppBrowserStorageEnabled" value="true"/>
  <preference name="BackupWebStorage" value="local" />
	<plugin name="cordova-plugin-sim"/>
	<plugin name="cordova-plugin-x-socialsharing" spec="5.4.0" />
	<plugin name="cordova-plugin-battery-status" spec="~1.2.4" />
        <plugin name="cordova-plugin-camera" spec="~2.4.1" />
        <plugin name="cordova-plugin-console" spec="~1.0.7" />
 	<plugin name="cordova-plugin-contacts" spec="~2.3.1" />
	<plugin name="cordova-plugin-device" spec="~2.0.3" />
	<plugin name="cordova-plugin-device-motion" spec="~1.2.5" />
	<plugin name="cordova-plugin-device-orientation" spec="~1.0.7" />
	<plugin name="cordova-plugin-dialogs" spec="~1.3.3" />
	<plugin name="cordova-plugin-file" spec="~4.3.3" />
	<plugin name="cordova-plugin-file-transfer" spec="~1.6.3" />
	<plugin name="cordova-plugin-geolocation" spec="~2.4.3" />
	<plugin name="cordova-plugin-globalization" spec="~1.0.7" />
	<plugin name="cordova-plugin-inappbrowser" spec="~1.7.1" />
        <plugin name="cordova-plugin-media" spec="~3.0.1" />
	<plugin name="cordova-plugin-media-capture" spec="~1.4.3" />
	<plugin name="cordova-plugin-network-information" spec="~1.3.3" />
	<plugin name="cordova-plugin-splashscreen" spec="~4.0.3" />
	<plugin name="cordova-plugin-vibration" spec="~2.1.5" />
	<plugin name="cordova-plugin-statusbar" spec="~2.2.3" />
	<gap:plugin name="cordova-plugin-spinnerdialog" source="npm" />
	<gap:plugin name="cordova-plugin-listpicker" source="npm" />
        <gap:plugin name="cordova-launch-review" source="npm" />
  	<plugin name="cordova-pdf-generator" source="npm" />
	<plugin name="cordova-plugin-keyboard" source="npm" />
	<plugin name="cordova-plugin-nativestorage" source="npm" spec="~2.1.0"/>
	<plugin name="cordova-plugin-sim" source="npm" />
	<plugin name="cordova-sms-plugin" source="npm" />
  	<plugin name="cordova-plugin-android-permissions" />
		
  <icon src="icon.png" />
  <icon src="icon.png" gap:platform="android" gap:qualifier="ldpi"/>
  <icon src="icon_mdpi.png" gap:platform="android" gap:qualifier="mdpi"/>
  <icon src="icon_hdpi.png" gap:platform="android" gap:qualifier="hdpi"/>
  <icon src="icon_xhdpi.png" gap:platform="android" gap:qualifier="xhdpi"/>
  <icon src="icon.png" gap:platform="blackberry"/>
  <icon src="icon.png" gap:platform="blackberry" gap:state="hover"/>
  <icon src="icon3.png" gap:platform="android" width="57" height="57" /> 
  <icon src="icon4.png" gap:platform="android" width="72" height="72" /> 
  <icon src="icon5.png" gap:platform="android" width="114" height="114" /> 	
  <icon src="icon6.png" gap:platform="android" width="144" height="144" /> 
	
  <gap:splash src="splash.png" gap:platform="android" gap:qualifier="port-ldpi"/>
   
 
  <access origin="tel:*" launch-external="yes" />
  <access origin="mailto:*" launch-external="yes" />
  <access origin="*" subdomains="true" />
  <plugin name="cordova-android-support-gradle-release" source="npm">
<variable name="ANDROID_SUPPORT_VERSION" value="28.0.0"/>
</plugin>
  <plugin name="cordova-android-play-services-gradle-release" spec="1.4.2">
	 <variable name="PLAY_SERVICES_VERSION" value="15.+" />
  </plugin>
  <allow-intent href="http://*/*"/>
  <allow-intent href="https://*/*"/>
  <allow-intent href="tel:*"/>
  <allow-intent href="sms:*"/>
  <allow-intent href="mailto:*"/>
  <allow-intent href="geo:*"/>
  <platform name="android">
    <allow-intent href="market:*"/>
  </platform>
  <platform name="ios">
    <allow-intent href="itms:*"/>
    <allow-intent href="itms-apps:*"/>
  </platform>
  <feature name="Camera">
    <param name="android-package" value="org.apache.cordova.camera.CameraLauncher" />
 </feature>
 <feature name="http://api.phonegap.com/1.0/media"/>
 <feature name="http://api.phonegap.com/1.0/file"/>
 <feature name="http://api.phonegap.com/1.0/network"/>
  <feature name="http://api.phonegap.com/1.0/device"/>
 <feature name="CLGeocoderPlugin">
    <param name="ios-package" value="CLGeocoderPlugin" />
 </feature>
	<feature name="SmsPlugin">
      <param name="android-package" value="org.apache.cordova.plugin.SmsPlugin"/>
 </feature>
	
 <feature name="Geolocation">
    <param name="android-package" value="org.apache.cordova.geolocation.GeoBroker" />
</feature>
<feature name="Geolocation">
    <param name="ios-package" value="CDVLocation" />
</feature>
<Capabilities>
    <Capability Name="ID_CAP_LOCATION" />
</Capabilities>
 <feature name="File">
      <param name="android-package" value="org.apache.cordova.FileUtils" />
 </feature>
 <feature name="FileTransfer">
      <param name="android-package" value="org.apache.cordova.FileTransfer" />
 </feature>
<feature name="Device">
    <param name="android-package" value="org.apache.cordova.Device" />
</feature>	 
</widget>
